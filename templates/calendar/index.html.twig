{% extends 'base.html.twig' %}

{% block title %}Hello CalendarController!{% endblock %}
{% block stylesheets %}
<link href="{{ asset('css/main.css') }}" rel="stylesheet" />
{% endblock %}

{% block body %}

    <div id='calendar'></div>

    <script>

        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');

            var today = $.datepicker.formatDate('yy-mm-dd', new Date());
            var events = JSON.parse('{{ events|raw}}');

            var calendar = new FullCalendar.Calendar(calendarEl, {
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                initialDate: today,
                navLinks: false, // can click day/week names to navigate views
                selectable: true,
                selectMirror: true,
                select: function(arg) {
                    var title = prompt('Event Description:');
                    var date = $.datepicker.formatDate('yy-mm-dd', new Date(arg.start));

                    if (title) {
                        $.ajax({
                            url: "{{ path('calendar_new') }}",
                            data: 'description=' + title + '&date=' + date,
                            type: "POST",
                            success: function (data) {
                                console.log("Added Successfully");
                            }
                        });

                        calendar.addEvent({
                            title: title,
                            start: arg.start,
                            end: arg.end,
                            allDay: arg.allDay
                        })
                    }
                    calendar.unselect()
                },
                eventClick: function(arg) {
                    if (confirm('Are you sure you want to delete this event?')) {

                        var url = '{{ path("calendar_delete", {'id': 'event_id'}) }}';
                        url = url.replace("event_id", arg.event.id);

                        $.ajax({
                            url: url,
                            type: "DELETE",
                            success: function () {
                                console.log("Deleted Successfully");
                            }
                        });

                        arg.event.remove()
                    }
                },
                editable: true,
                dayMaxEvents: true, // allow "more" link when too many events
                events: events
            });

            calendar.render();
        });

    </script>

    {% block javascripts %}
        <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
{% endblock %}
